set number                  " show line numbers
set showcmd                 " show command in bottom bar
set cursorline              " highlight current line
set showmatch               " higlight matching parenthesis

set encoding=utf8           " use the only sane Unicode encoding

set expandtab               " insert spaces when the tab key is hit
set shiftwidth=4            " insert 4 spaces when the tab key is hit
set tabstop=4               " show every <TAB> as 4 spaces
set softtabstop=4           " 4 space tab
set modelines=1
set autoindent

filetype plugin indent on   " enable filtype detection and indentation

set incsearch               " search as characters are entered
set hlsearch                " highlight matches

set textwidth=80            " wrap every line at column 80

syntax enable               " enable syntax processing
set background=dark
